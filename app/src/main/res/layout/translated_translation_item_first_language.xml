<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:background="@drawable/background_first_language"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/languageAOriginalTranslationItem"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/dark_grey"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/languageATranslatedTranslationItem"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/languageAOriginalTranslationItem"
        app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/transparent"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_baseline_volume_up_24" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>