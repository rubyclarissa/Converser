<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:background="@drawable/background_second_language"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/accent_purple"
            android:height="48dp"
            app:srcCompat="@drawable/ic_baseline_volume_up_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/languageBOriginalTranslationItem"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:maxWidth="275dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/languageBTranslatedTranslationItem"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:maxWidth="275dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/languageBOriginalTranslationItem" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>